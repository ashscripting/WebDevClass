<%- include('../partials/Header.ejs') %>
<div class="obj-container">
    <div class="placement">
            <form class="form" method="POST">
                <div class="form-elements">
                    <label class = "label" for="name">Name</label>
                    <input type="text" class="elements" id="name" placeholder="Enter User's Name" name="Name" value="<%= user.Name%>" required>
                </div>
                <div class="form-elements mt-3">
                    <label class = "label" for="Lastname">Last Name</label>
                    <input type="text" class="elements" id="Lastname" placeholder="Enter Users's Lastname" name="Lastname" value="<%= user.Lastname%>" required>
                </div>
                <div class="form-elements mt-3">
                    <label class = "label" for="ID">User Id</label>
                    <input type="text" class="elements" id="ID" placeholder="Enter User's id number" name="UserId" value="<%= user.UserId%>" required>
                </div>
                <div class ="btn-container">
                    <button class="button" type="submit" >Submit</button>
                    <button type = "button" onclick="window.location.href='/userlist'" class="button">Cancel</button>
                </div>
            </form>
    </div>
</div>


<%- include('../partials/Footer.ejs') %>
